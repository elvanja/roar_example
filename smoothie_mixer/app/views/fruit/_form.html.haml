= form_for @fruit do |f|
  -if @fruit.errors.any?
    #error_explanation
      %h2= "#{pluralize(@fruit.errors.count, "error")} prohibited this fruit from being saved:"
      %ul
        - @fruit.errors.full_messages.each do |msg|
          %li= msg

  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :taste, :class => 'control-label'
    .controls
      = f.text_field :taste, :class => 'text_field'
  .actions
    = f.submit 'Save'
